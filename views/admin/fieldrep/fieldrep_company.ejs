<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1">
   <title>XAKKT 2.0</title>
   <!-- Google Font: Source Sans Pro -->
   <link rel="stylesheet"
      href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
   <!-- Font Awesome -->
   <link rel="stylesheet" href="<%= process.env.BASE_URL %>/plugins/fontawesome-free/css/all.min.css">
   <!-- daterange picker -->
   <link rel="stylesheet" href="<%= process.env.BASE_URL %>/plugins/daterangepicker/daterangepicker.css">
   <!-- iCheck for checkboxes and radio inputs -->
   <link rel="stylesheet" href="<%= process.env.BASE_URL %>/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
   <!-- Bootstrap Color Picker -->
   <link rel="stylesheet"
      href="<%= process.env.BASE_URL %>/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css">
   <!-- Tempusdominus Bootstrap 4 -->
   <link rel="stylesheet"
      href="<%= process.env.BASE_URL %>/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
   <!-- Select2 -->
   <link rel="stylesheet" href="<%= process.env.BASE_URL %>/plugins/select2/css/select2.min.css">
   <link rel="stylesheet"
      href="<%= process.env.BASE_URL %>/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
   <!-- Bootstrap4 Duallistbox -->
   <link rel="stylesheet"
      href="<%= process.env.BASE_URL %>/plugins/bootstrap4-duallistbox/bootstrap-duallistbox.min.css">
   <!-- BS Stepper -->
   <link rel="stylesheet" href="<%= process.env.BASE_URL %>/plugins/bs-stepper/css/bs-stepper.min.css">
   <!-- dropzonejs -->
   <link rel="stylesheet" href="<%= process.env.BASE_URL %>/plugins/dropzone/min/dropzone.min.css">
   <!-- Theme style -->
   <link rel="stylesheet" href="<%= process.env.BASE_URL %>/dist/css/adminlte.min.css">
</head>

<body class="hold-transition sidebar-mini">
   <div class="wrapper">
      <!-- Navbar -->
      <%-await include('../../_partials/_admin/navbar.ejs'); %>
         <!-- /.navbar -->
         <!-- Main Sidebar Container -->
         <%-await include('../../_partials/_admin/sidebar.ejs'); %>
            <!-- Content Wrapper. Contains page content -->
            <div class="content-wrapper">
               <!-- Content Header (Page header) -->
               <section class="content-header">
                  <div class="container-fluid">
                     <div class="row mb-2">
                        <div class="col-sm-6">
                           <h1>Fieldrep Companies</h1>
                        </div>
                        <div class="col-sm-6">
                           <ol class="breadcrumb float-sm-right">
                              <li class="breadcrumb-item"><a href="#">Home</a></li>
                              <li class="breadcrumb-item active">New User</li>
                           </ol>
                        </div>
                     </div>
                  </div>
                  <!-- /.container-fluid -->
               </section>
               <!-- Main content -->
               <section class="content">
                  <div class="container-fluid">
                     <!-- SELECT2 EXAMPLE -->
                     <div class="card card-default">
                        <div class="card-header">
                           <h3 class="card-title">Assign companies to fieldrep</h3>
                           <div class="card-tools">
                              <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                 <i class="fas fa-minus"></i>
                              </button>
                              <button type="button" class="btn btn-tool" data-card-widget="remove">
                                 <i class="fas fa-times"></i>
                              </button>
                           </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                           <form id="userForm" method="POST" action="" enctype="multipart/form-data">
                              <div class="row">
                                 <div class="col-md-6">
                                    <div class="form-group">
                                       <label for="fieldrep">Select Fieldrep</label>
                                       <input type="text" class="form-control" id="fieldrep" name="fieldrep"
                                          placeholder="Fieldrep">
                                    </div>
                                 </div>
                                 <div class="col-md-6">
                                    <div class="form-group">
                                       <label>Fieldrep email</label>
                                       <input type="text" class="form-control" id="last_name" name="last_name"
                                          placeholder="Fieldrep email">
                                    </div>
                                 </div>
                                 <div class="col-md-6">
                                    <div class="form-group">
                                       <label for="contact_no">Username</label>
                                       <input type="text" class="form-control" id="username" name="username" placeholder="username">
                                       <div class="message" style="display:none;">
                                          <span style="color:red">Username already exists</span>
                                        </div> 
                                    </div>
                                 </div>
                                 <div class="col-md-6">
                                    <div class="form-group">
                                       <label for="email">Password</label>
                                       <input type="text" class="form-control" id="email" name="email"
                                          placeholder="Email">
                                          
                                    </div>
                                 </div>
                                 <!--div class="col-md-6">
                                    <div class="form-group">
                                       <label for="">Password</label>
                                       <input type="text" class="form-control" id="password" name="password"
                                          placeholder="Password">
                                    </div>
                                 </div-->
                                 <div class="col-md-6">
                                    <div class="form-group">
                                       <label for="email">Companies</label>
                                       <input type="text" class="form-control" id="email" name="email"
                                          placeholder="Select Companies">
                                          
                                    </div>
                                 </div>

                             
                                 <!-- /.col -->
                              </div>
                              <!-- /.row -->
                              <div class="card-footer">
                                 <button type="submit" class="btn btn-primary submit">Submit</button>
                              </div>
                           </form>
                           <!-- /.row -->
                        </div>
                        <!-- /.card-body -->
                     </div>
                     <!-- /.card -->
                  </div>
                  <!-- /.container-fluid -->
               </section>
               <!-- /.content -->
            </div>
            <!-- /.content-wrapper -->
            <%- await include('../../_partials/_admin/footer.ejs'); %>
               <!-- Control Sidebar -->
               <aside class="control-sidebar control-sidebar-dark">
                  <!-- Control sidebar content goes here -->
               </aside>
               <!-- /.control-sidebar -->
   </div>
   <!-- ./wrapper -->
   <!-- jQuery -->
   <script src="<%= process.env.BASE_URL %>/plugins/jquery/jquery.min.js"></script>
   <!-- Bootstrap 4 -->
   <script src="<%= process.env.BASE_URL %>/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

   <!-- bs-custom-file-input -->
   <script src="<%= process.env.BASE_URL %>/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
   <!-- Select2 -->
   <script src="<%= process.env.BASE_URL %>/plugins/select2/js/select2.full.min.js"></script>
   <!-- InputMask -->
   <script src="<%= process.env.BASE_URL %>/plugins/moment/moment.min.js"></script>
   <!-- date-range-picker -->
   <script src="<%= process.env.BASE_URL %>/plugins/daterangepicker/daterangepicker.js"></script>
   <!-- AdminLTE App -->
   <script src="<%= process.env.BASE_URL %>/dist/js/adminlte.min.js"></script>
   <!-- jquery-validation -->
   <script src="<%= process.env.BASE_URL %>/plugins/jquery-validation/jquery.validate.min.js"></script>
   <script src="<%= process.env.BASE_URL %>/plugins/jquery-validation/additional-methods.min.js"></script>


   <script>
      $(function () {
         $('.select2').select2({})
         bsCustomFileInput.init();
      });

      $(function () {

         $('#userForm').validate({
            rules: {
               first_name  : {  required: true  },
               last_name   : {  required: true  },
               contact_no  : {  required: true  },
               email       : {  required: true  },
               password    : {  required: true  },
               profile_pic : {  required: true  },
               store       : {  required:true   },
               timezone    : {  required: true  },
               company     : {  required: true  },
               role        : {  required: true  }
            },
            messages: { },
            errorElement: 'span',
            errorPlacement: function (error, element) {
               error.addClass('invalid-feedback');
               element.closest('.form-group').append(error);
            },
            highlight: function (element, errorClass, validClass) {
               $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
               $(element).removeClass('is-invalid');
            }
         });


         $("#email").keyup(function () {
            let formdata = {
            "email": $(this).val()
            }
            $.ajax({
               url: '/admin/user/checkEmail',
               type: 'POST',
               data: formdata
               }).done((data) => {
               if (!data.status) {
                  $('.message').show();
                  $('.submit').prop('disabled', true).css('background-color', 'red');
               }else{
                  $('.message').hide();
                  $('.submit').prop('disabled', false);
                  $('.submit').addClass('btn btn-primary ').css('background-color', '')
               }
            })
         })

      });
   </script>
</body>

</html>