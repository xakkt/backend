         <!-- Main content -->
         <section class="content">
            <div class="container">
               <!-- SELECT2 EXAMPLE -->
               <div class="card card-primary">
                  <div class="card-header">
                     <h3 class="card-title">Edit Department Details</h3>
                     <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                           <i class="fas fa-minus"></i>
                        </button>
                     </div>
                  </div>
                  <!-- /.card-header -->
                  <div class="card-body">
                     
                     <form id="departmentForm" method="post" action="/admin/department/update/<%= departments._id %>"
                        enctype="multipart/form-data">
                       
                        <div class="row">
                           <div class="col-md-6">
                              <div class="form-group">
                                 <label for="departmentname">Name</label>
                                 <input type="text" name="name" class="form-control" value="<%= departments.name %>"
                                    id="departmentname" placeholder="Enter name">
                              </div>
                           </div>
                           <!-- /.col -->

                           <div class="col-md-6">
                              <div class="form-group">
                                 <label for="departmentLogo">File input</label>
                                 <div class="input-group">
                                    <div class="custom-file">
                                       <input type="file" name="logo" value="<%= departments.logo %>"
                                          class="custom-file-input" accept="image/x-png,image/jpeg" id="departmentLogo">
                                       <label class="custom-file-label" for="departmentLogo">Choose file</label>
                                    </div>

                                 </div>
                              </div>
                              <!-- /.col -->
                           </div>
                           <!-- /.row -->
                        </div>
                        <div class="row">
                           <div class="col-md-12">
                              <div class="form-group">
                                 <label>Description</label>
                                 <textarea name="description" class="form-control" rows="3"
                                    placeholder="Enter ..."><%= departments.description %></textarea>
                              </div>
                           </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                           <button type="submit" class="btn btn-primary">Submit</button>
                        </div>



                     </form>
                   
                  </div>
                  <!-- /.card -->
