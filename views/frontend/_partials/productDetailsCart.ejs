<input type="hidden" name="_product" value="<%=product.info._id%>" />
<input type="hidden" class="button_type" name="button_type" value="" />
<input type="hidden" class="shoplist" name="_shoppinglist" value="" />
<input type="hidden" class="user" name="_user" value="<%=userid%>" />


<div class="quantity">
    <button class="minus-btn xbtn" type="button" name="button">
        <i class="fa fa-minus" aria-hidden="true"></i>
    </button>
    <input type="text" name="quantity" value="1">
    <button class="plus-btn xbtn" type="button" name="button">
        <i class="fa fa-plus" aria-hidden="true"></i>
    </button>
 </div>

<div class="xshop" style="margin-left: 6px;">
    <span>
        
       <img class="img-responsive xakkti x-list x-list-red-<%=product.info._id%> <%=(product.in_shoppinglist)?'':'d-none' %>" data-productid="<%=product.info._id%>"  title="Add shopping list" data-prop="x-list" data-action=0 src="<%= process.env.BASE_URL %>/frontend/images/RED_shopping_List.png" title="Add to shopping list" alt="No Image">
      
       <img class="img-responsive x-list xakkti x-list-grey-<%=product.info._id%> <%=(product.in_shoppinglist)?'d-none':'' %>" data-formid="product_form_<%=slider%>_<%=product.info._id%>" data-toggle="modal" data-action=1 data-target="#shoppingListModal" data-storeid="<%= (!!locals.store)?store._id:'' %>" data-id="<%=product.info._id%>" data-prop="x-list" src="<%= process.env.BASE_URL %>/frontend/images/GREY_Shopping_List.png" title="Remove shopping list" alt="No Image">
    
    </span>
    <span class="cpr-page">

            <img class="img-responsive xakkti x-heart x-heart-red-<%=product.info._id%> <%=(product.is_favourite)?'':'d-none' %>" title="Remove from favourite" data-prop="x-heart" data-productid="<%=product.info._id%>" src="<%= process.env.BASE_URL %>/frontend/images/RED_Favorite.png" alt="No Image">
            <img class="img-responsive xakkti x-heart x-heart-grey-<%=product.info._id%> <%=(product.is_favourite)?'d-none':'' %>" title="Add to favourite" data-prop="x-heart" data-productid="<%=product.info._id%>" src="<%= process.env.BASE_URL %>/frontend/images/GREY_Favorite.png" alt="No Image">
            
    </span>
    <span>
        
        <img class="img-responsive xakkti x-cart x-cart-red-<%=product.info._id%> <%=(product.in_cart)?'':'d-none' %>" title="Remove from Cart" data-prop="x-cart" data-productid="<%=product.info._id%>" src="<%= process.env.BASE_URL %>/frontend/images/RED_Cart.png" alt="No Image">
        
        <img class="img-responsive xakkti x-cart x-cart-grey-<%=product.info._id%> <%=(product.in_cart)?'d-none':'' %>" title="Add to Cart" data-prop="x-cart" data-productid="<%=product.info._id%>" src="<%= process.env.BASE_URL %>/frontend/images/GREY_Cart.png" alt="No Image">    

        
    </span>
 </div>

 