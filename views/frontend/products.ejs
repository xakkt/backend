<!DOCTYPE html>
<head>
   <meta charset="utf-8">
   <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

   <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
   <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
   <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
   <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
   <script src="https://use.fontawesome.com/73e16e51a8.js"></script>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.2.1/owl.carousel.js"></script>
  
   <link rel="stylesheet" href="<%= process.env.BASE_URL %>/frontend/css/xakkt-slider.css" type="text/css">
   <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" type="text/css">
   
<style>
    .quantity {
  padding: 10px 0 10px 0;
}
.quantity input {
  -webkit-appearance: none;
  border: none;
  text-align: center;
  width: 32px;
  font-size: 16px;
  color: #43484D;
  font-weight: 300;
}
 
.xbtn {
  width: 30px;
  height: 30px;
  background-color: #E1E8EE;
  border-radius: 6px;
  border: none;
  cursor: pointer;
}
.minus-btn img {
  margin-bottom: 3px;
}
.plus-btn img {
  margin-top: 2px;
}
 
button:focus,
input:focus {
  outline:0;
}
.xshop{
    margin:0;
    padding:10px 0 10px 0;
}
</style>

</head>
<body>
   <!-- Navbar -->
   <%- await include('../_partials/_frontend/navbar.ejs'); %>
   <!-- /.navbar -->
   <div class="main-body">
      
      <div class="jumbotron jumbotron-fluid x-jumbo">
         <div id="bannerCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
               <% for (const [i,banner] of banners.banner.entries()) { %>
                  <li data-target="#bannerCarousel" data-slide-to="<%=i%>" class="<%=(i==0)?'active':''%>"></li>
                <% }%> 
            </ol>
            <div class="carousel-inner">
                <% for (const [i,banner] of banners.banner.entries()) { %>
                    <div class="carousel-item <%=(i==0)?'active':''%>">
                        <img class="d-block w-100" src="<%= process.env.BASE_URL %>/images/banners/<%=banner.image%>" alt="First slide">
                    </div>
                <% }%> 
            </div>
            <a class="carousel-control-prev" href="#bannerCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#bannerCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
         </div>


         <div class="container-list">
            <ul class="list-inline">
                <% for (const [i,brand] of brands.entries()) { %>
                    <%if(i==20){%>
                        <li class="list-inline-item"><a href="">Check More</a></li>
                        
                    <% break; }%>    
                        <li class="list-inline-item"><a href=""><%=brand.name%></a></li>
                    
                <% }%>    
            </ul>
         </div>
      </div>


      <div class="container-fluid">
                

        <div class="ccc_viewed">
            
            <div class="row">
                <div class="col">
                    <div class="ccc_main_container">
                        <div class="ccc_viewed_title_container">
                            <h3 class="ccc_viewed_title">Trending Nearby</h3>
                            <div class="ccc_viewed_nav_container">
                                <div class="ccc_viewed_nav ccc_viewed_prev"><i class="fas fa-chevron-left"></i></div>
                                <div class="ccc_viewed_nav ccc_viewed_next"><i class="fas fa-chevron-right"></i></div>
                            </div>
                        </div>
                        <div class="ccc_viewed_slider_container">
                            <div class="owl-carousel owl-theme ccc_viewed_slider">
                               
                              <% for (const [i,product] of trending.product.entries()) { %>
                              <div class="owl-item">
                               
                                    <div class="ccc_viewed_item discount d-flex flex-column align-items-center justify-content-center text-center">
                                        <div class="ccc_viewed_image"><img src="<%=product.image%>" alt=""></div>
                                        <div class="ccc_viewed_content text-center">
                                            <div class="ccc_viewed_price"><%=store._currency.name%><%=product.deal_price%><span><%=product.regular_price%></span></div>
                                            
                                            <div class="ccc_viewed_name"><a href="#"><%=product.name.get('english')%></a></div>
                                            
                                            <div class="quantity">
                                               <button class="minus-btn xbtn" type="button" name="button">
                                                   <i class="fa fa-minus" aria-hidden="true"></i>
                                               </button>
                                               <input type="text" name="name" value="1">
                                               <button class="plus-btn xbtn" type="button" name="button">
                                                   <i class="fa fa-plus" aria-hidden="true"></i>
                                               </button>
                                               
                                             </div>
   
                                             <div class="xshop row">
                                               <span class="col" style="padding-right:0;">
                                                   <img class="img-responsive" src="<%= process.env.BASE_URL %>/frontend/images/GREY_Cart.png" alt="">
                                               </span>
                                               <span class="col">
                                                       <img class="img-responsive" src="<%= process.env.BASE_URL %>/frontend/images/GREY_Favorite.png" alt="">
                                               </span>
                                               <span class="col" style="padding-left:0;">
                                                   <img class="img-responsive" src="<%= process.env.BASE_URL %>/frontend/images/GREY_Shopping_List.png" alt="">
                                               </span>
                                           </div>
                                        </div>
                                        <!--ul class="item_marks">
                                            <li class="item_mark item_discount">-25%</li>
                                            <li class="item_mark item_new">new</li>
                                        </ul-->
                                    </div>
                                </div>
                                <% }%> 
                                
                                
   
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
    </div>

         <div class="bbb_viewed">
            
            <div class="row">
                <div class="col">
                    <div class="bbb_main_container">
                        <div class="bbb_viewed_title_container">
                            <h3 class="bbb_viewed_title">Deals at <%=store.name%></h3>
                            <div class="bbb_viewed_nav_container">
                                <div class="bbb_viewed_nav bbb_viewed_prev"><i class="fas fa-chevron-left"></i></div>
                                <div class="bbb_viewed_nav bbb_viewed_next"><i class="fas fa-chevron-right"></i></div>
                            </div>
                        </div>
                        <div class="bbb_viewed_slider_container">
                            <div class="owl-carousel owl-theme bbb_viewed_slider">
                               
                              <% for (const [i,product] of deal.product.entries()) { %> 
                              
                              <div class="owl-item">
                                    <div class="bbb_viewed_item discount d-flex flex-column align-items-center justify-content-center text-center">
                                        <div class="bbb_viewed_image"><img src="<%=product.image%>" alt=""></div>
                                        <div class="bbb_viewed_content text-center">
                                            <div class="bbb_viewed_price"><%=store._currency.name%><%=product.deal_price%><span><%=product.regular_price%></span></div>
                                            <div class="bbb_viewed_name"><a href="#"><%=product.name.english%></a></div>

                                            <div class="quantity">
                                                <button class="minus-btn xbtn" type="button" name="button">
                                                    <i class="fa fa-minus" aria-hidden="true"></i>
                                                </button>
                                                <input type="text" name="name" value="1">
                                                <button class="plus-btn xbtn" type="button" name="button">
                                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                                </button>
                                                
                                              </div>
                          <div class="xshop row">
                                               <span class="col" style="padding-right:0;">
                                                   <img class="img-responsive" src="<%= process.env.BASE_URL %>/frontend/images/GREY_Cart.png" alt="">
                                               </span>
                                               <span class="col">
                                                       <img class="img-responsive" src="<%= process.env.BASE_URL %>/frontend/images/GREY_Favorite.png" alt="">
                                               </span>
                                               <span class="col" style="padding-left:0;">
                                                   <img class="img-responsive" src="<%= process.env.BASE_URL %>/frontend/images/GREY_Shopping_List.png" alt="">
                                               </span>
                                            </div>
                                             

                                        </div>
                                        <!--ul class="item_marks">
                                            <li class="item_mark item_discount">-25%</li>
                                            <li class="item_mark item_new">new</li>
                                        </ul-->
                                    </div>
                                </div>
                               
                                <% }%>  

                          </div>
                        </div>
                    </div>
                </div>
            </div>
        
        </div>  
          

      



        
      </div> <!--container-fluid-->
  

   </div>


   <script src="<%= process.env.BASE_URL %>/frontend/js/xakkt.js"></script>

  
</body>
</html>