   <div class="main-body">
      
      <div class="jumbotron jumbotron-fluid x-jumbo">
         <div id="bannerCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
               <% for (const [i,banner] of banners.banner.entries()) { %>
                  <li data-target="#bannerCarousel" data-slide-to="<%=i%>" class="<%=(i==0)?'active':''%>"></li>
                <% }%> 
            </ol>
            <div class="carousel-inner">
                <% for (const [i,banner] of banners.banner.entries()) { %>
                    <div class="carousel-item <%=(i==0)?'active':''%>">
                        <img class="d-block w-100" src="<%= process.env.BASE_URL %>/images/banners/<%=banner.image%>" alt="First slide">
                    </div>
                <% }%> 
            </div>
            <a class="carousel-control-prev" href="#bannerCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#bannerCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </a>
         </div>


         <div class="container-list">
            <ul class="list-inline">
                <% for (const [i,brand] of brands.entries()) { %>
                    <%if(i==20){%>
                        <li class="list-inline-item"><a href="">Check More</a></li>
                        
                    <% break; }%>    
                        <li class="list-inline-item"><a href=""><%=brand.name%></a></li>
                    
                <% }%>    
            </ul>
         </div>
      </div>


      <div class="container-fluid">
                
       <div class="ccc_viewed">
            
            <div class="row">
                <div class="col">
                    <div class="ccc_main_container">
                        <div class="ccc_viewed_title_container">
                            <h3 class="ccc_viewed_title">Trending Nearby</h3>
                            <div class="ccc_viewed_nav_container">
                                <div class="ccc_viewed_nav ccc_viewed_prev"><i class="fas fa-chevron-left"></i></div>
                                <div class="ccc_viewed_nav ccc_viewed_next"><i class="fas fa-chevron-right"></i></div>
                            </div>
                        </div>
                        <div class="ccc_viewed_slider_container">
                            <div class="owl-carousel owl-theme ccc_viewed_slider">
                               
                              <% for (const [i,product] of trending.product.entries()) { %>
                              <div class="owl-item">
                               
                                    <div class="ccc_viewed_item discount d-flex flex-column align-items-center justify-content-center text-center">
                                        <div class="ccc_viewed_image" data-product-name="<%=product.name.get('english')%>" data-img="<%=product.image%>" data-sku="<%=product.sku%>"  data-store-currency="<%=store._currency.name%>" data-deal-price="<%=product.deal_price%>" data-regular-price="<%=product.regular_price%>"  data-toggle="modal" data-target="#product_view" >
                                            <img src="<%=product.image%>" alt="">
                                        </div>
                                        <div class="ccc_viewed_content text-center">
                                            <div class="ccc_viewed_price"><%=store._currency.name%><%=product.deal_price%><span><%=product.regular_price%></span></div>
                                            
                                            <div class="ccc_viewed_name">
                                                  <a href="javascript:void(0);" data-product-name="<%=product.name.get('english')%>" data-img="<%=product.image%>" data-store-currency="<%=store._currency.name%>" data-sku="<%=product.sku%>"  data-deal-price="<%=product.deal_price%>" data-regular-price="<%=product.regular_price%>"  data-toggle="modal" data-target="#product_view"><%=product.name.get('english')%></a>
                                            </div>
                                            <form class="cart-form" method="post">
                                               <input type="hidden" name="_store" value="<%=store._id%>" />
                                                <%- await include('_partials/productSliders.ejs',{product:product}); %>
                                           </form>

                                        </div>
                                      
                                   </div>
                                </div>
                                <% }%> 
       
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        
    </div>

         <div class="bbb_viewed">
            
            <div class="row">
                <div class="col">
                    <div class="bbb_main_container">
                        <div class="bbb_viewed_title_container">
                            <h3 class="bbb_viewed_title">Deals at <%=store.name%></h3>
                            <div class="bbb_viewed_nav_container">
                                <div class="bbb_viewed_nav bbb_viewed_prev"><i class="fas fa-chevron-left"></i></div>
                                <div class="bbb_viewed_nav bbb_viewed_next"><i class="fas fa-chevron-right"></i></div>
                            </div>
                        </div>
                        <div class="bbb_viewed_slider_container">
                            <div class="owl-carousel owl-theme bbb_viewed_slider">
                               
                              <% for (const [i,product] of deal.product.entries()) { %> 
                              
                              <div class="owl-item">
                                    <div class="bbb_viewed_item discount d-flex flex-column align-items-center justify-content-center text-center">
                                        <div class="bbb_viewed_image" data-product-name="<%=product.name.english%>" data-img="<%=product.image%>" data-sku="<%=product.sku%>"  data-deal-price="<%=product.deal_price%>" data-regular-price="<%=product.regular_price%>"  data-toggle="modal" data-target="#product_view" ><img src="<%=product.image%>" alt=""></div>
                                        <div class="bbb_viewed_content text-center">
                                            <div class="bbb_viewed_price"><%=store._currency.name%><%=product.deal_price%><span><%=product.regular_price%></span></div>
                                            <div class="bbb_viewed_name">
                                              <a href="javascript:void(0);" data-product-name="<%=product.name.english%>" data-img="<%=product.image%>" data-sku="<%=product.sku%>"  data-deal-price="<%=product.deal_price%>" data-regular-price="<%=product.regular_price%>"  data-toggle="modal" data-target="#product_view"><%=product.name.english%></a></div>

                                              <form class="cart-form">
                                                <input type="hidden" name="_store" value="<%=store._id%>" />  
                                                  <%- await include('_partials/productSliders.ejs',{product:product}); %>
                                              </form>

                                        </div>
                                        <!--ul class="item_marks">
                                            <li class="item_mark item_discount">-25%</li>
                                            <li class="item_mark item_new">new</li>
                                        </ul-->
                                    </div>
                                </div>
                               
                                <% }%>  

                          </div>
                        </div>
                    </div>
                </div>
            </div>
        
        </div>  
          

      
        
      </div> <!--container-fluid-->
  

   </div>



