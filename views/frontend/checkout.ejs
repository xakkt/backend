      <script>
         $(document).ready(function(){



          $('.addaddress,.editAddressModal').submit(function(e){ 
            e.preventDefault();
            const obj = $(this).serializeArray().reduce((acc, {name, value}) => ({...acc, [name]: value}), {})
            
            var url = $(this).attr('action')
            switch (obj.country)
            {  
              case 'uae': 
                    obj.address1 = obj.streetno
                    obj.address2 = obj.building
                    obj.city = obj.uaecity
                    obj.countrycode = "+971"

                    delete obj.streetno
                    delete obj.building
                    delete obj.uaecity 
                    break;
              case 'usa': 
                    obj.city = obj.usacity
                    obj.countrycode = "+1"
                    
                    delete obj.uaecity
                    delete obj.building 
                    delete obj.area 
                    delete obj.building
                    delete obj.usacity
                    delete obj.streetno   
                    break;
              
            }

            $.post(url, obj).done(result => { 
                              
                                        if(!result.status){
                                                $("#loginError").show().text(result.errors); }else{
                                                  Swal.fire({
                                                      icon: 'success',
                                                      title: 'Data addedd successfully',
                                                      showConfirmButton: false,
                                                      timer: 1500
                                                    }) 
                                                    location.reload();
                                            }
                            }).fail(result=>{
                                      $("#loginError").show().text(result.responseJSON.errors);
                            }); 
         
          })
          
            
              $('.country').change(function(){
                  $('.uae,.usa').toggleClass('d-none')
              })
              $('input[type="radio"]').click(function(){
                var demovalue = $(this).val(); 
                  $("div.mydiv").hide();
                  $("#show"+demovalue).show();
              });

              
});
      </script>
